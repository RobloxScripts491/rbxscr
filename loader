local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "GigachadExecutor"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Create main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 400)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 30, 60)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Add corner rounding
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = mainFrame

-- Add gradient for vibrancy
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 30, 60)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(40, 60, 120))
}
gradient.Rotation = 45
gradient.Parent = mainFrame

-- Title bar
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.BackgroundColor3 = Color3.fromRGB(60, 80, 140)
titleBar.BorderSizePixel = 0
titleBar.Parent = mainFrame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 15)
titleCorner.Parent = titleBar

-- Title label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0.8, 0, 1, 0)
titleLabel.Position = UDim2.new(0.1, 0, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Eat Pizza To Grow GIGACHAD Script"
titleLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- Minimize/Maximize button
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 40, 0, 40)
toggleButton.Position = UDim2.new(1, -80, 0, 0)
toggleButton.BackgroundTransparency = 1
toggleButton.Text = "-"
toggleButton.TextColor3 = Color3.fromRGB(255, 150, 200)
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 20
toggleButton.Parent = titleBar

-- Close button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 40, 0, 40)
closeButton.Position = UDim2.new(1, -40, 0, 0)
closeButton.BackgroundTransparency = 1
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 100, 100)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 20
closeButton.Parent = titleBar

-- Button container
local buttonContainer = Instance.new("Frame")
buttonContainer.Size = UDim2.new(1, -20, 1, -60)
buttonContainer.Position = UDim2.new(0, 10, 0, 50)
buttonContainer.BackgroundTransparency = 1
buttonContainer.Parent = mainFrame

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Padding = UDim.new(0, 10)
uiListLayout.FillDirection = Enum.FillDirection.Vertical
uiListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
uiListLayout.Parent = buttonContainer

-- Button hover effect function
local function applyHoverEffect(button)
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {Size = UDim2.new(0, 260, 0, 50), BackgroundColor3 = Color3.fromRGB(100, 120, 180)}):Play()
    end)
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {Size = UDim2.new(0, 240, 0, 40), BackgroundColor3 = Color3.fromRGB(80, 100, 160)}):Play()
    end)
end

-- Create buttons
local buttons = {
    {Name = "Script V1 (Recommended)", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v1"},
    {Name = "Script V2", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v2"},
    {Name = "Script V3", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v3"},
    {Name = "Script V4", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v4"},
    {Name = "Script V5", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v5"},
    {Name = "Script V6", Script = "https://raw.githubusercontent.com/RobloxScripts490/rbxscr/refs/heads/main/v6"},
}

for i, btnInfo in ipairs(buttons) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 240, 0, 40)
    button.BackgroundColor3 = Color3.fromRGB(80, 100, 160)
    button.Text = btnInfo.Name
    button.TextColor3 = Color3.fromRGB(255, 200, 100)
    button.Font = Enum.Font.Gotham
    button.TextSize = 16
    button.Name = "Button" .. i
    button.Parent = buttonContainer

    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = button

    applyHoverEffect(button)

    button.MouseButton1Click:Connect(function()
        loadstring(game:HttpGet(btnInfo.Script))()
    end)
end

-- Toggle GUI animation with buttons moving and fading
local minimized = false
local originalSize = mainFrame.Size
local minimizedSize = UDim2.new(0, 300, 0, 40)

toggleButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut)
    
    if minimized then
        -- Shrink GUI and fade buttons progressively
        TweenService:Create(mainFrame, tweenInfo, {Size = minimizedSize}):Play()
        for i, button in ipairs(buttonContainer:GetChildren()) do
            if button:IsA("TextButton") then
                local delay = (i - 1) * 0.05 -- Staggered fade for each button
                TweenService:Create(button, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut, 0, false, delay), 
                    {TextTransparency = 1, BackgroundTransparency = 1, Position = UDim2.new(0, 10, 0, -40 * i)}):Play()
            end
        end
        toggleButton.Text = "+"
    else
        -- Expand GUI and fade buttons back
        TweenService:Create(mainFrame, tweenInfo, {Size = originalSize}):Play()
        for i, button in ipairs(buttonContainer:GetChildren()) do
            if button:IsA("TextButton") then
                local delay = (i - 1) * 0.05
                TweenService:Create(button, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut, 0, false, delay), 
                    {TextTransparency = 0, BackgroundTransparency = 0, Position = UDim2.new(0, 10, 0, (i-1) * 50)}):Play()
            end
        end
        toggleButton.Text = "-"
    end
end)

-- Close button
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Minimize with 'E' key
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.E then
        toggleButton:Activate()
    end
end)
